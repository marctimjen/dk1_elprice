# On windows:
python -m venv venv
venv\Scripts\activate

# On ubuntu:
python3 -m venv venv
source venv/bin/activate

# make req file:
pip3 freeze > req.txt

# install from req file:
pip3 install -r req.txt


# cron:
crontab -e

